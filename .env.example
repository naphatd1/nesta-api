# Database Configuration
DATABASE_URL="postgresql://xxxxx:xxxxx@xxxxx:xxxxx/xxxxx?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_TOKEN_EXPIRES_IN="15m"
JWT_REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-change-this-in-production"
JWT_REFRESH_TOKEN_EXPIRES_IN="7d"

# Application Configuration
PORT=4000
NODE_ENV=development

# Database Credentials (for Docker Compose)
POSTGRES_DB=xxxxx
POSTGRES_USER=xxxxx
POSTGRES_PASSWORD=xxxxx

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Optional: CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# Optional: Logging
LOG_LEVEL=info

# Supabase Configuration (Optional - for cloud file storage)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-role-key